{
  "name": "cartilla-interactiva",
  "version": "1.0.0",
  "description": "Cartilla Interactiva para la enseñanza de música con enfoque étnico.",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "node src/server/server.js",
    "dev": "concurrently \"npm run sass:browser\" \"npm run sass:desktop\" \"nodemon --watch src --watch public --exec electron .\"",
    "sass:browser": "sass --style=compressed browser/styles/main.scss:browser/styles/dist/main.css --watch",
    "sass:desktop": "sass --style=compressed desktop/styles/main.scss:desktop/styles/dist/main.css --watch",
    "build": "electron-builder"
  },
  "keywords": [
    "educación",
    "música",
    "interactivo",
    "primaria",
    "secundaria",
    "juegos didácticos",
    "cartilla",
    "Node.js",
    "React",
    "Socket.io"
  ],
  "author": "SENA - SENNOVA",
  "license": "MIT",
  "dependencies": {
    "db-local": "3.1.0",
    "express": "4.21.1",
    "express-handlebars": "7.1.3",
    "socket.io": "4.8.0",
    "winston": "3.15.0"
  },
  "devDependencies": {
    "concurrently": "8.2.2",
    "electron": "31.0.1",
    "electron-builder": "24.13.3",
    "nodemon": "3.1.3",
    "sass": "1.77.6",
    "standard": "17.1.0"
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "import/no-absolute-path": "off"
    },
    "globals": {
      "Phaser": "readonly",
      "Tone": "readonly"
    }
  }
}