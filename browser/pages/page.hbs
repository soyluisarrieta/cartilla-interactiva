    <div class="swiper-slide"><img class="full-screen-image" src="/assets/images/pages/module-1/6.jpg"></div>
    <div class="swiper-slide"><img class="full-screen-image" src="/assets/images/pages/module-1/7.jpg"></div>
    <div class="swiper-slide"><img class="full-screen-image" src="/assets/images/pages/module-1/8.jpg"></div>
    <div class="swiper-slide"><img class="full-screen-image" src="/assets/images/pages/module-1/9.jpg"></div>
    <div class="swiper-slide"><img class="full-screen-image" src="/assets/images/pages/module-1/10.jpg"></div>
