<link rel="stylesheet" href="/assets/lib/swiper/swiper-bundle.min.css">

<style>
   .nav-buttons {
    position: fixed;
    bottom: 3rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
    display: flex;
    justify-content: center;
    gap: 1rem;
   }

  .nav-buttons button, .nav-buttons a {
    width: 8rem;
    height: 8rem;
    z-index: 10;
    border-radius: 50%;
    border: solid rgb(255 0 0 / 50%);
    background-color: rgb(255 0 0 / 30%);
  }
</style>
{{/section}}

<main>
  <div class="swiper-container">
  <div class="swiper-wrapper">
    <div class="swiper-slide"><img class="full-screen-image" src="/assets/images/pages/module-1/1.jpg"></div>
