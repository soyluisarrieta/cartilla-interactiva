{{#section "head"}}
{{> page-info
  title="Cartilla interactiva | SENNOVA"
}}
{{/section}}

<main>
  <a class="back-btn" href="/">
    <img src="/assets/images/back-btn.png" alt="Volver a atrás" />
  </a>
  
  <div id="modules-title">
    <img src="/assets/images/pages/modules-title.png" alt="Módulos de la cartilla" />
  </div>

  <div id="nav-modules">
    <a href="/cartilla/modulo-1"><img src="/assets/images/modules/mod-1.png" alt="Módulo #1" /></a>
    <a href="/cartilla/modulo-2"><img src="/assets/images/modules/mod-2.png" alt="Módulo #2" /></a>
    <a href="/cartilla/modulo-3"><img src="/assets/images/modules/mod-3.png" alt="Módulo #3" /></a>
    <a href="/cartilla/modulo-4"><img src="/assets/images/modules/mod-4.png" alt="Módulo #4" /></a>
    <a href="/cartilla/modulo-5"><img src="/assets/images/modules/mod-5.png" alt="Módulo #5" /></a>
  </div>
</main>

{{> footer}}

{{#section "style"}}
<style>
  main {
    width: 100%;
    background-image: url('/assets/images/pages/main-bg.jpg');
    background-position: center;
    background-size: cover;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 2rem 0 20vh;
  }

  #modules-title {
    width: 100%;
    min-width: 40rem;
    max-width: 70rem;
    padding: 0rem 2rem 2rem;
    margin: 0 auto;

    img {
      width: 100%;
      object-fit: contain;
    }
  }

  #nav-modules {
    background-color: rgba(54, 20, 4, 0.4);
    padding: 7rem;
    border-radius: 9999px;
    display: flex;
    gap: 2rem;

    a {
      width: 20rem;
      height: 20rem;
      display: inline-block;
      border-radius: 9999px;
      overflow: hidden;
      transition: 200ms;
    }

    img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }

    a:hover {
      transform: scale(1.07) translateY(-1rem);
      filter: saturate(170%);
      box-shadow: 0 14px 30px rgba(37, 14, 3, 0.4);
    }
  }
</style>
{{/section}}