{{#section "head"}}
{{> page-info
  title="Cartilla interactiva | SENNOVA"
}}
{{/section}}

<main>
  <a class="back-btn" href="/">
    <img src="/assets/images/back-btn.png" alt="Volver a atrás" />
  </a>
  
  <div id="modules-title" class="static-content">
    <img src="/assets/images/pages/modules-title.png" alt="Módulos de la cartilla" />
  </div>

  <div id="nav-modules">
    {{#each modules}}
      <a href="/cartilla/modulo-{{_id}}"><img src="/assets/images/logos/module-{{_id}}.png" alt="{{this.title}}" title="{{this.description}}" /></a>
    {{/each}}
  </div>
</main>

{{> footer}}

{{#section "style"}}
<style>
  main {
    width: 100%;
    background-image: url('/assets/images/pages/main-bg.jpg');
    background-position: center;
    background-size: cover;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 2rem 0 25vh;
  }

  #modules-title {
    width: 100%;
    height: 18rem;
    min-width: 40rem;
    max-width: 70rem;
    padding: 2rem;
    margin: 2rem auto 0;

    img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
  }

  #nav-modules {
    background-color: rgba(54, 20, 4, 0.4);
    padding: 7rem;
    border-radius: 9999px;
    display: flex;
    gap: 2rem;

    a {
      width: 20rem;
      height: 20rem;
      display: inline-block;
      border-radius: 9999px;
      overflow: hidden;
      transition: 200ms;
    }

    img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }

    a:hover {
      transform: scale(1.07) translateY(-1rem);
      filter: saturate(170%);
      box-shadow: 0 14px 30px rgba(37, 14, 3, 0.4);
    }
  }
</style>
{{/section}}