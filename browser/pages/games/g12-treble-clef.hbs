{{> page-info
  title="Cartilla interactiva | SENNOVA"
}}
{{/section}}

<script type="module">
  import { TREBLE_CLEF } from '/scripts/musicalStaff.js'
  import { GAME_MODES } from '/games/StaffSounds/src/constants.js'
  import StartGame from '/games/StaffSounds/index.js'

  const {
    CLEF,
    NOTES: {
      DO3,RE3,MI3,FA3,SOL3,LA3,SI3, 
      DO4,RE4,MI4,FA4,SOL4,LA4,SI4, 
      DO5 
    }
  } = TREBLE_CLEF

  window.gameSettings = {
    id: 'g12-treble-clef',
    game: 'StaffSounds',
    module: 2,
    tempo: 700,
    clef: CLEF,
    notes: {
      get: (number) => {
        const maxNotes = number > NOTES.length ? NOTES.length : number;
        const maxStartIndex = NOTES.length - maxNotes;
        const startIndex = Math.floor(Math.random() * (maxStartIndex + 1));
        return NOTES.slice(startIndex, startIndex + maxNotes);
      },
      groups: [3,6,4,8,5,10]
    },
    maxNotes: 6,
    levels: [
      {
        name: 'Escribir',
        mode: GAME_MODES.WRITE
      },
      {
        name: 'Escuchar',
        mode: GAME_MODES.LISTEN
      },
      {
        name: 'Leer',
        mode: GAME_MODES.READ
      },
    ]
  }

  StartGame()
</script>

