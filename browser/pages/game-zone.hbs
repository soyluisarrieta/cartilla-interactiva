<script>
   document.addEventListener('DOMContentLoaded', function () {
    const swiper = new Swiper('.swiper-container', {
      effect: "carousel",
      slidesPerView: 3.5,
      grid: { rows: 2 },
      width: 1500,
      height: 'auto',
      grabCursor: true,
      loop: false,
    });
  });
</script>


{{#section "style"}}
  <style>
    main {
      width: 100%;
      background-image: url('/assets/images/pages/main-bg.jpg');
      background-position: center;
      background-size: cover;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    #game-zone-title {
      width: 100%;
      min-width: 40rem;
      max-width: 60rem;
      padding: 5rem 2rem 2rem;
      margin: 0 auto;

      img {
        width: 100%;
        object-fit: contain;
      }
    }

    .swiper-container {
      width: 100%;
      height: 80rem;
      padding-bottom: 5rem;

      .swiper-slide {
        position: relative;
        border-radius: 9999px;
        margin-left: 2rem;

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
          border-radius: 2rem;
          box-shadow: 0 7px 7px rgba(0,0,0,0.3);
        }
        
        .swiper-slide-content {
          width: 100%;
          height: 100%;
          position: absolute;
          top: 0;
          right: -1rem;
          z-index: 10;
          display: flex;
          flex-direction: column;
          justify-content: flex-end;
          align-items: flex-end;

          > a.btn {
            width: 50%;
            height: auto;
            margin-bottom: 2rem;
            align-self: center;
            
            span {
              padding: 1rem;
              font-size: 3rem;
            }
          }
        }
      }
    }

    .swiper-slide:nth-child(even) {
      top: 2rem;
    }
  </style>
{{/section}}