    const swiper = new Swiper('.swiper-container', {
      effect: "coverflow",
      direction: "horizontal",
      mousewheel: true,
      grabCursor: true,
      slidesPerView: '3.5',
      loop: true,
      centeredSlides: true,
      coverflowEffect: {
        rotate: 50,
        stretch: 0,
        depth: 100,
        modifier: 1,
        slideShadows: true,
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
    });
  });
</script>

{{#section "style"}}
  <style>
    main {
      width: 100%;
      background-image: url('/assets/images/pages/main-bg.jpg');
      background-position: center;
      background-size: cover;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    #game-zone-title {
      width: 45vw;
      padding: 0 10vw;
      margin: 4vw auto 2vw;

      img {
        width: 100%;
        object-fit: contain;
      }
    }

    /* Animation Fade in */    
    @keyframes fadeIn {
      from { 
        height: 0;
        opacity: 0; 
      }
      to { 
        height: auto;
        opacity: 1; 
      }
    }

    .swiper-container {
      width: 100%;
      padding: 0 5vw 5vw;
      user-select: none;

      .swiper-slide {
        height: 0;
        position: relative;
        border-radius: 100vw;
        opacity: 0;
        animation: 300ms fadeIn 200ms forwards;

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
          border-radius: 2vw;
          box-shadow: 0 5px 12px rgba(0,0,0,0.4);
        }

        .swiper-slide-shadow-coverflow {
          border-radius: 2vw;
        }
        
        .swiper-slide-content {
          width: 100%;
          height: fit-content;
          padding-top: 5vw;
          position: absolute;
          bottom: 0;
          left: 0;
          z-index: 10;
          display: flex;
          flex-direction: column;
          justify-content: flex-end;
          align-items: flex-end;
          opacity: 0;
          transition: 200ms;

          background: rgba(0,0,0,0.3);
          background: linear-gradient(0deg, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0) 100%);
          border-bottom-left-radius: 2vw;
          border-bottom-right-radius: 2vw;

          > a.btn {
            width: 50%;
            height: auto;
            margin-bottom: 1vw;
            align-self: center;
            filter: saturate(130%);
            transform: translateY(2vw);
            
            span {
              padding: 0.7vw;
              font-size: 1.5vw;
            }
          }
        }
      }
    }

    .swiper-slide:hover .swiper-slide-content {
      opacity: 1;

      > a.btn {
        transform: translateY(0);
        transition-delay: 50ms;
      }
    }

    .swiper-button-next, .swiper-button-prev {
      width: 3vw;
      height: 3vw !important;
      margin: 0 3vw;
      top: 10vw;
      color: #449342;
      background-color: rgba(255,255,255,0.8);
      padding: 2vw;
      border-radius: 100vw;
      box-shadow: 0 5px 12px rgba(0,0,0,0.4);
      opacity: 0;
      transition: 150ms;
      animation: 300ms fadeIn 700ms forwards;

    }

    .swiper-button-next:hover, .swiper-button-prev:hover {
      transform: scale(1.05);
      opacity: 1;
    }

    .swiper-button-next::after, .swiper-button-prev::after {
      font-size: 2vw;
      font-weight: bold;
      text-align: center;
    }

    /* Profile */
    .profile {
      position: absolute;
      top: 1vw;
      right: 1vw;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;

      > button {
        background-color: white;
        box-shadow: 0 0 1vw rgba(0,0,0,0.3);
        padding: 0.3vw;
        border-radius: 100vw;
        transition: 150ms;
        animation: pulse 2s infinite;

        img {
          width: 4vw;
          height: 4vw;
          border-radius: 100%;
          user-select: none;
          -webkit-user-select: none;
          -moz-user-select: none;
          -ms-user-select: none;
          -webkit-user-drag: none;
          -webkit-tap-highlight-color: transparent;
          filter: grayscale(1);
          opacity: 0.8;
        }

        span {
          font-size: 1.5vw;
          margin-left: 1vw;
          padding-right: 2vw;
          opacity: 0.4;
        }
      }

      .profile-container {
        width: 100%;
        height: 100vh;
        padding: 1vw 0;
        display: flex;
        justify-content: flex-end;
        align-items: center;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 100;
        background-color: rgba(0,0,0,0.5);
        backdrop-filter: blur(1vw);

        > .backdrop {
          width: 100%;
          height: 100%;
          position: absolute;
          top: 0;
          left: 0;
        }

        .profile-content {
          width: 30vw;
          height: 100%;
          overflow-y: auto;
          margin-right: 1vw;
          border-radius: 1vw;
          text-align: center;
          background: #449342;
          background: linear-gradient(40deg, rgba(85, 192, 83, 0.8) 0%, rgba(22, 107, 37, 0.8) 100%);
          color: #fff;
          box-shadow: 0 0.5vw 3vw rgba(0,0,0,0.3);
          position: relative;
          display: flex;
          flex-direction: column;
          justify-content: space-between;

          h2 {
            padding: 2vw 0 1vw;
            font-size: 2vw;
          }

          input.username {
            width: 80%;
            border-radius: 100vw;
            border: none;
            background-color: #ffffff;
            text-align: center;
            color: #2a5731;
            font-size: 1vw;
            padding: 0.7vw;
            margin-bottom: 1.5vw;
            outline: none;
          }

          form > p {
            opacity: 0.8;
            font-size: 1vw;
          }

          form > .btn-submit {
            background-color: white;
            color: #2a5731;
            display: block;
            margin: auto;
            padding: 0.7vw 1vw;
            border-radius: 100vw;
            font-size: 0.8vw;
            font-weight: 600;
            margin-bottom: 1vw;
          }

          .profiles-loaded {
            padding: 2vw 0;
            background-color: #267432;
          
            > span {
              font-size: 1.2vw;
              font-weight: 500;
              display: block;
              margin-bottom: 1vw;
            }
          }

          .profile-cards {
            height: 38vh;
            overflow-y: auto;
            padding: 0 2vw;
            display: flex;
            flex-direction: column;
            gap: 0.7vw;
          }

          .profile-card {
            width: 100%;
            padding: 0.3vw;
            border-radius: 1vw;
            background-color: #fff;
            color: #2a412d;
            text-align: left;
            user-select: none;
            display: grid;
            grid-template-columns: auto auto 1fr;
            grid-template-rows: 1fr 0.6fr;
            justify-content: flex-start;
            align-items: center;
            column-gap: 0.7vw;
            row-gap: 0.2vw;
            transition: 150ms;

            img {
              width: 4vw;
              height: 4vw;
              grid-row: span 2;
              border-radius: 0.9vw;
            }

            .name {
              max-width: 90%;
              font-size: 1.3vw;
              font-weight: 600;
              white-space: nowrap;
              text-overflow: ellipsis;
              overflow: hidden;
              align-self: last baseline;
            }

            .last-time {
              font-size: 0.8vw;
              font-weight: 600;
              opacity: 0.5;
              align-self: baseline;
              order: 1;
            }

            > svg {
              width: 1.5vw;
              margin-right: 0.4vw;
              justify-self: end;
              grid-row: span 2;
              transition: 150ms;
            }
          }
        }
      }
    }

    .profile .open-container.profile-selected {
      animation: none;

      img {
        filter: grayscale(0);
        opacity: 1;
      }

      span {
        opacity: 1;
      }
    }

    .profile-card:hover {
      transform: translateX(0.3vw);
      box-shadow: 0 0.3vw 1vw rgba(0,0,0,0.3);

      > svg {
        transform: translateX(0.3vw);
      }
    }

    .avatars {
      width: 100%;
      display: flex;
      gap: 0.3vw;
      justify-content: center;
      flex-wrap: wrap;
      padding: 1vw;
    }
    
    .avatars label {
      display: block;
      cursor: pointer;
      border-radius: 1vw;
      transition: border-color 0.3s;
    }
    
    .avatars img {
      width: 4vw;
      height: 4vw;
      border-radius: 1vw;
      object-fit: cover;
    }
    
    .avatars input[type='radio'] {
      display: none;
    }
  
    .avatars input[type="radio"]:hover + img {
      transform: scale(1.03);
      filter: brightness(110%) saturate(120%);
    }
  
    .avatars input[type="radio"]:checked + img {
      transform: scale(1.1);
      filter: brightness(110%) saturate(120%);
      outline: 0.1vw solid #fff;
      outline-offset: 0.2vw;
    }

    .hidden {
      display: none !important;
    }

    @keyframes pulse {
      0%, 50% {
          transform: scale(1) rotate(0deg);
      }
      10%, 30% {
          transform: scale(1.03) rotate(3deg);
      }
      20%, 40% {
          transform: scale(1.03) rotate(-3deg);
      }
    }

    .profile > button:hover {
      animation-play-state: paused;
      transform: scale(1) rotate(0deg) !important;
    }
  </style>
{{/section}}