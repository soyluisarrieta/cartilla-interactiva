{{#section "style"}}
<style>
  main {
    width: 100%;
    background-image: url('/assets/images/pages/main-bg.jpg');
    background-position: center;
    background-size: cover;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem 0 10rem;
  }

  #warm-up-title {
    width: 100%;
    min-width: 40rem;
    max-width: 60rem;
    padding: 7rem 2rem 2rem;
    margin: 0 auto;

    img {
      width: 100%;
      object-fit: contain;
    }
  }

  #warm-up-videos {
    max-width: 130rem;
    width: 100%;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(40rem, 1fr));
    gap: 2rem;
    padding: 2rem;

    video {
      width: 100%;
      cursor: pointer;
      border-radius: 1rem;
      overflow: hidden;
      transition: 200ms;
    }

    video:hover {
      transform: scale(1.03) translateY(-0.5rem);
      box-shadow: 0 7px 12px rgba(0,0,0,0.4);
    }

  }
</style>
