{{#section "head"}}
{{> page-info
  title="Cartilla interactiva | SENNOVA"
}}
{{/section}}

<main>
  <div id="booklet-title" class="static-content">
    <img src="/assets/images/pages/booklet-title.png" alt="Cartilla interactiva para la enseñanza de música" />
  </div>
  <section id="nav-buttons">
    {{> button 
      id="btn-cartilla-interactiva"
      href="/cartilla" 
      label="Cartilla interactiva" 
      gradient-from="#52c1d4" 
      gradient-to="#5063a8"  
    }}
    {{> button 
      id="btn-videos-de-calentamiento" 
      href="/calentamiento" 
      label="Videos de calentamiento" 
      gradient-from="#FF6347" 
      gradient-to="#FF8C00"
    }}
    {{> button 
      id="btn-zona-de-juegos" 
      href="/zona-de-juegos" 
      label="Zona de juegos"
      gradient-from="#9E53D2" 
      gradient-to="#6C53D3"  
    }}
    {{> button 
      id="btn-recursos" 
      href="/recursos" 
      label="Recursos" 
      gradient-from="#D3D156" 
      gradient-to="#57AC4E"
    }}

    <div class="extra-buttons">
      <a href="/creditos">Créditos</a>
    </div>
  </section>
</main>

{{> footer}}

{{#section "style"}}
<style>
  main {
    width: 100%;
    background-image: url('/assets/images/pages/main-bg.jpg');
    background-position: center;
    background-size: cover;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 5vw;
  }

  #booklet-title {
    width: 70vw;
    padding: 0rem 12vw;
    margin: -7vw auto 1vw;

    img {
      width: 100%;
      object-fit: contain;
    }
  }

  #nav-buttons {
    height: fit-content;
    margin: 0 auto;
    margin-bottom: -5vw;
    display: flex;
    flex-direction: column;
    gap: 0.8vw;

    > a {
      transform: scale(0.9);
      margin-bottom: -1vw;
    }

    .extra-buttons {
      width: auto;
      display: flex;
      justify-content: center;
      gap: 4vw;

      a {
        color: #352c1f;
        font-weight: 500;
        font-size: 1.5vw;
        margin: 1vw 0 0;
        font-family: Lato, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      }
    }
  }
</style>
{{/section}}