  <style>
    .swiper-container .swiper-slide {
      height: 100vh;
      background-size: cover;
      background-position: center;
      position: relative;
      overflow: hidden;

      > img {
        max-width: 100vw;
        height: 100vh;
        display: block;
        margin: 0 auto;
        object-fit: contain;
        object-position: top;
      }

      .swiper-content {
        width: 100%;
        opacity: 0;
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        transition: 200ms opacity;
      }

      .swiper-content.grid-activities {
        display: flex;
        justify-content: center;
        gap: 1.3rem;
        padding: 5rem;

        > .activity-card {
          width: 20%;
          height: fit-content;
          display: block;
          margin-top: 10%;
          font-size: 2rem;
          font-weight: bold;
          text-decoration: none;
          position: relative;
          border-radius: 2rem;
          box-shadow: 0 0.5rem 1rem rgb(0  0 0 / 30%);
          overflow: hidden;
          transition: 150ms ease-in-out;

          img {
            width: 100%;
            object-fit: cover;
            aspect-ratio: 1;
          }

          span {
            width: 100%;
            background: rgb(0  0 0 / 40%);
            background: linear-gradient(0deg, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0) 100%);
            backdrop-filter: blur(0.3rem);
            position: absolute;
            bottom: 0;
            left: 0;
            display: block;
            padding: 2rem 1.3rem;
            color: white;
            text-shadow: 0 0 1rem rgba(0,0,0,0.3);
          }
        }

        > .activity-card:hover {
          transform: scale(1.04);
        }
      }
    }

    .nav-buttons {
      position: fixed;
      bottom: 5vh;
      left: 50%;
      transform: translateX(-50%);
      z-index: 10;
      display: flex;
      justify-content: center;

      button:first-child img {
        transform: scalex(-1);
      }
    }

    .nav-buttons button, .nav-buttons a {
      height: 10vh;
      position: relative;
      z-index: -1;
      transition: 150ms ease-in-out;

      img {
        height: 100%;
        object-fit: contain;
        transform: scale(1);
        pointer-events: initial;
      }
    }
    
    .nav-buttons button:hover , .nav-buttons a:hover  {
      transform: scale(1.05) translateY(-0.3rem);
      filter: saturate(170%);
    }
    .nav-buttons button:active , .nav-buttons a:active  {
        transform: scale(0.9);
    }

    .swiper-horizontal>.swiper-pagination-bullets, 
    .swiper-pagination-bullets.swiper-pagination-horizontal, 
    .swiper-pagination-custom, 
    .swiper-pagination-fraction {
      bottom: 1vh;
    }

    .swiper-horizontal>.swiper-pagination-bullets .swiper-pagination-bullet, 
    .swiper-pagination-horizontal.swiper-pagination-bullets .swiper-pagination-bullet {
      margin: 0 0.3vw;
    }

    .swiper-pagination-bullet {
      width: 1vh;
      height: 1vh;
    }
  </style>
  
  {{{_sections.style}}}
</head>
<body>
  <main>
    {{!-- Swiper --}}
    <div class="swiper-container">
      <div class="swiper-wrapper">
        {{{body}}}
      </div>

      <!-- Add Pagination -->
      <div class="swiper-pagination"></div>

      <!-- Add Navigation -->
      <div class="nav-buttons">
        <button class="button-prev"><img class="static-content" src="/assets/images/modules/btn-arrow.png" alt="" ></button>
        <a href="/cartilla" class="button-home"><img class="static-content" src="/assets/images/modules/btn-home.png" alt="" ></a>
        <button class="button-next"><img class="static-content" src="/assets/images/modules/btn-arrow.png" alt="" ></button>
      </div>
    </div>
  </main>

  <script src="/assets/lib/swiper/swiper-bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const swiper = new Swiper('.swiper-container', {
        loop: false,
        effect: 'fade',
        pagination: {
          el: '.swiper-pagination',
          clickable: true,
        },
        navigation: {
          nextEl: '.button-next',
          prevEl: '.button-prev',
        },
      });
    });

    // Fijar proporciÃ³n 16:9 en slides con contenidos
    const slides = document.querySelectorAll('.swiper-content');

    function setAspectRatio() {
      const viewportWidth = window.innerWidth;
      const viewportHeight = window.innerHeight;

      let width = viewportWidth;
      let height = width * 9 / 16;

      if (height > viewportHeight) {
          height = viewportHeight;
          width = height * 16 / 9;
      }

      slides.forEach(slide => {
        slide.style.opacity = `1`;
        slide.style.width = `${width}px`;
        slide.style.height = `${height}px`;
      });
    }

    slides.length && window.addEventListener('resize', setAspectRatio);
    slides.length && window.addEventListener('load', setAspectRatio);
  </script>
</body>
