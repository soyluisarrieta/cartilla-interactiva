<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- Favicons -->
  <link rel="icon" type="image/png" href="/assets/images/favicons/favicon-48x48.png" sizes="48x48" />
  <link rel="icon" type="image/svg+xml" href="/assets/images/favicons/favicon.svg" />
  <link rel="shortcut icon" href="/assets/images/favicons/favicon.ico" />
  <link rel="apple-touch-icon" sizes="180x180" href="/assets/images/favicons/apple-touch-icon.png" />
  <link rel="manifest" href="/assets/images/favicons/site.webmanifest" />

  {{> page-info
    title=title
    description=description
  }}

  {{{_sections.head}}}

  <link rel="stylesheet" href="/styles/dist/main.css">
  <link rel="stylesheet" href="/assets/lib/swiper/swiper-bundle.min.css">
  
  <style>
    video {
      max-width: 47%;
      height: 47%;
      display: block;
      margin: 0 auto;
      margin-top: 15%;
      border-radius: 1vw;
      transition: 300ms;
    }

    video:hover {
      box-shadow: 0 0.7vw 1vw rgba(0, 0, 0, 0.4);
      transform: translateY(-0.2vw);
    }

    .source-video {
      max-width: 47%;
      margin: 0 auto;
      margin-top: -1vw;
      font-size: 0.8vw;
      text-align: center;
      line-height: 1.2vw;
      font-family: Lato, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      padding: 1.5vw;
      padding-top: 1.8vw;
      border-bottom-left-radius: 1vw;
      border-bottom-right-radius: 1vw;
      display: flex;
      gap: 2vw;
      justify-content: center;

      >p {
        max-width: 45%;
      }

      a {
        color: rgb(0, 76, 255);
      }
    }
    
    .swiper-container .swiper-slide {
      height: 100vh;
      background-size: cover;
      background-position: center;
      position: relative;
      overflow: hidden;

      > img {
        max-width: 100vw;
        height: 100vh;
        display: block;
        margin: 0 auto;
        object-fit: contain;
        object-position: top;
      }

      .swiper-content {
        width: 100%;
        opacity: 0;
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        transition: 200ms opacity;
      }

      .swiper-content.grid-activities {
        display: flex;
        justify-content: center;
        gap: 1.3vw;
        padding: 3vw;

        > .activity-card {
          width: 16vw;
          height: fit-content;
          display: block;
          margin-top: 10%;
          font-weight: bold;
          text-decoration: none;
          position: relative;
          border-radius: 1vw;
          box-shadow: 0 0.1vw 0.8vw rgb(0  0 0 / 20%);
          overflow: hidden;
          transition: 150ms ease-in-out;

          img {
            width: 100%;
            object-fit: cover;
            aspect-ratio: 1;
          }

          span {
            width: 100%;
            background: #ffffff;
            color: #332a23;
            position: absolute;
            bottom: 0;
            left: 0;
            display: block;
            padding: 0.7vw 0.6vw;
            font-family: Lato, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            font-size: 0.9vw;
            text-align: center;
          }
        }

        > .activity-card:hover {
          transform: scale(1.04);
        }
      }
    }

    .nav-buttons {
      position: fixed;
      bottom: 5vh;
      left: 50%;
      transform: translateX(-50%);
      z-index: 10;
      display: flex;
      justify-content: center;

      button:first-child img {
        transform: scalex(-1);
      }
    }

    .nav-buttons button, .nav-buttons a {
      height: 10vh;
      position: relative;
      z-index: -1;
      transition: 150ms ease-in-out;

      img {
        height: 100%;
        object-fit: contain;
        transform: scale(1);
        pointer-events: initial;
      }
    }
    
    .nav-buttons button:hover , .nav-buttons a:hover  {
      transform: scale(1.05) translateY(-0.3rem);
      filter: saturate(170%);
    }
    .nav-buttons button:active , .nav-buttons a:active  {
        transform: scale(0.9);
    }

    .swiper-horizontal>.swiper-pagination-bullets, 
    .swiper-pagination-bullets.swiper-pagination-horizontal, 
    .swiper-pagination-custom, 
    .swiper-pagination-fraction {
      bottom: 1vh;
    }

    .swiper-horizontal>.swiper-pagination-bullets .swiper-pagination-bullet, 
    .swiper-pagination-horizontal.swiper-pagination-bullets .swiper-pagination-bullet {
      margin: 0 0.3vw;
    }

    .swiper-pagination-bullet {
      width: 1vh;
      height: 1vh;
    }
  </style>
  
  {{{_sections.style}}}
</head>
<body>
  <main>
    {{!-- Swiper --}}
    <div class="swiper-container">
      <div class="swiper-wrapper">
        {{{body}}}
      </div>

      <!-- Add Pagination -->
      <div class="swiper-pagination"></div>

      <!-- Add Navigation -->
      <div class="nav-buttons">
        <button class="button-prev"><img class="static-content" src="/assets/images/modules/btn-arrow.png" alt="" ></button>
        <a href="/cartilla" class="button-home"><img class="static-content" src="/assets/images/modules/btn-home.png" alt="" ></a>
        <button class="button-next"><img class="static-content" src="/assets/images/modules/btn-arrow.png" alt="" ></button>
      </div>
    </div>
  </main>

  <script src="/assets/lib/swiper/swiper-bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const swiper = new Swiper('.swiper-container', {
        loop: false,
        effect: 'fade',
        pagination: {
          el: '.swiper-pagination',
          clickable: true,
        },
        navigation: {
          nextEl: '.button-next',
          prevEl: '.button-prev',
        },
      });
    });

    // Fijar proporciÃ³n 16:9 en slides con contenidos
    const slides = document.querySelectorAll('.swiper-content');

    function setAspectRatio() {
      const viewportWidth = window.innerWidth;
      const viewportHeight = window.innerHeight;

      let width = viewportWidth;
      let height = width * 9 / 16;

      if (height > viewportHeight) {
          height = viewportHeight;
          width = height * 16 / 9;
      }

      slides.forEach(slide => {
        slide.style.opacity = `1`;
        slide.style.width = `${width}px`;
        slide.style.height = `${height}px`;
      });
    }

    slides.length && window.addEventListener('resize', setAspectRatio);
    slides.length && window.addEventListener('load', setAspectRatio);
  </script>
</body>
</html>