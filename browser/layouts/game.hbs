  <meta name="msapplication-TileImage" content="/assets/images/favicons/ms-icon-144x144.png">
  <meta name="theme-color" content="#ffffff">

  {{> page-info
    title=title
    description=description
  }}

  {{{_sections.head}}}

  <link rel="stylesheet" href="/styles/dist/main.css">

  <style>
    html, body {
        margin: 0;
        padding: 0;
        overflow: hidden;
        width: 100%;
        height: 100%;
    }
    
    body {
      background-image: url(/assets/images/pages/main-bg.jpg);
      background-size: cover;
      background-color: #2e8b67;
      backdrop-filter: blur(3rem) contrast(120%);
    } 

    body > #pattern-bg {
      background-image: url(/assets/games/resources/pattern_bg.png);
      background-repeat: repeat;
      opacity: 0.5;
      position: absolute;
      inset: 0;
    }
    
    #game-container {
      max-width: 96%;
      max-height: 96vh;
      margin-left: 2%;
      margin-top: 2vh;
      position: relative;

      canvas {
        border-radius: 1vw;
        border: solid 4px rgba(17, 78, 73, 0.3);
      }
    }
  </style>
  
  {{{_sections.style}}}
</head>
<body>
  <div id="pattern-bg"></div>
  <div id="game-container">
    {{!-- CANVAS --}}
  </div>
  <script src="/assets/lib/phaser/phaser.min.js"></script>
  {{{body}}}
</body>
</html>
